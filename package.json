{
  "name": "input-gateway-packages",
  "private": true,
  "version": "0.1.0",
  "homepage": "https://github.com/nrkno/sofie-input-gateway",
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "**/easymidi",
      "**/@elgato-stream-deck/node",
      "**/@julusian/jpeg-turbo",
      "**/eventemitter3",
      "**/node-hid"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "build": "yarn build:manager && yarn build:main",
    "build:main": "cd packages/input-gateway && yarn build",
    "build:manager": "cd packages/input-manager && yarn build",
    "lint": "yarn lerna exec yarn lint -- --",
    "test": "yarn lerna exec yarn test",
    "unit": "yarn lerna exec yarn unit",
    "unitci": "yarn lerna exec yarn unitci",
    "docs": "yarn typedoc .",
    "start": "yarn build:main && cd packages/input-gateway && yarn start",
    "dev:manager": "cd packages/input-manager && yarn build:watch",
    "dev:gateway": "nodemon --config nodemon.json ./packages/input-gateway/index.ts -id devxxsofie",
    "dev": "concurrently \"yarn dev:manager\" \"yarn dev:gateway\"",
    "postinstall": "lerna bootstrap",
    "release:set-version": "lerna version --exact --no-changelog --no-git-tag-version --no-push --yes",
    "release:bump-release": "lerna version --exact --conventional-commits --conventional-graduate --tag-version-prefix='' --no-push --force-publish=*",
    "release:bump-prerelease": "lerna version --exact --conventional-commits --conventional-prerelease --tag-version-prefix='' --no-push --force-publish=*",
    "validate:dependencies": "yarn lerna exec --parallel yarn validate:dependencies",
    "validate:dev-dependencies": "yarn lerna exec --parallel yarn validate:dev-dependencies",
    "do:build-win32": "rimraf deploy && yarn install && yarn build && yarn build-win32 && yarn copy-assets && yarn sign-executables && yarn zip-deploy",
    "build-win32": "pkg -t node16-win --public ./packages/input-gateway",
    "sign-executables": "node scripts/sign-executables.js",
    "copy-assets": "node scripts/copy-assets.js",
    "zip-deploy": "node scripts/zip-deploy.js",
    "release": "sofie-version"
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "~2.2",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.18.12",
    "@types/request": "^2.48.8",
    "@types/sprintf-js": "^1.1.0",
    "@types/underscore": "^1.10.24",
    "@types/ws": "^7.4.7",
    "@types/xml-js": "^1.0.0",
    "concurrently": "^7.5.0",
    "jest": "^26.0.1",
    "jest-haste-map": "^26.0.1",
    "jest-resolve": "^26.0.1",
    "lerna": "^5.5.2",
    "nodemon": "^2.0.20",
    "open-cli": "^7.0.1",
    "pkg": "^5.8.0",
    "rimraf": "^3.0.2",
    "symlink-dir": "^5.0.1",
    "ts-jest": "^26.1.0",
    "ts-node": "^10.9.1",
    "type-fest": "^2.16.0",
    "typedoc": "^0.22.14",
    "typescript": "~4.6",
    "zip-a-folder": "^1.1.5"
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json"
}
