{
  "name": "input-gateway-packages",
  "private": true,
  "version": "0.1.0",
  "homepage": "https://github.com/nrkno/sofie-input-gateway",
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "installConfig": {
      "hoistingLimits": "workspaces"
    }
  },
  "scripts": {
    "prepare": "husky install",
    "precommit": "lint-staged",
    "build": "yarn run generate-schema-types && lerna run build",
    "build:main": "lerna --scope=input-gateway run build",
    "build:manager": "yarn lerna --scope=@sofie-automation/input-manager run build",
    "lint": "lerna run lint -- --",
    "test": "lerna run test",
    "unit": "lerna run unit",
    "unitci": "lerna run unitci",
    "dev:manager": "cd packages/input-manager && yarn build:watch",
    "dev:gateway": "nodemon --config nodemon.json",
    "dev": "concurrently \"yarn dev:manager\" \"yarn dev:gateway\"",
    "release:set-version": "lerna version --exact --no-changelog --no-git-tag-version --no-push --yes",
    "release:bump-release": "lerna version --exact --conventional-commits --conventional-graduate --tag-version-prefix='v' --no-push",
    "release:bump-prerelease": "lerna version --exact --conventional-commits --conventional-prerelease --tag-version-prefix='v' --no-push",
    "validate:dependencies": "lerna exec --parallel yarn validate:dependencies",
    "validate:dev-dependencies": "lerna exec --parallel yarn validate:dev-dependencies",
    "do:build-win32": "rimraf deploy && yarn install && yarn build && yarn build-win32 && yarn copy-assets && yarn sign-executables && yarn zip-deploy",
    "do:build-win32:ci": "rimraf deploy && yarn install && yarn build && yarn build-win32 && yarn copy-assets",
    "verify:build-win32": "node scripts/verify-build-win32.mjs",
    "build-win32": "pkg -t node18-win --public ./packages/input-gateway",
    "sign-executables": "node scripts/sign-executables.js",
    "copy-assets": "node scripts/copy-assets.js",
    "zip-deploy": "node scripts/zip-deploy.js",
    "release": "sofie-version",
    "generate-schema-types": "lerna run generate-schema-types --stream"
  },
  "devDependencies": {
    "@sofie-automation/code-standard-preset": "~2.4.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.33",
    "@types/sprintf-js": "^1.1.4",
    "@types/underscore": "^1.11.15",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "json-schema-to-typescript": "^14.0.4",
    "lerna": "^6.6.2",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "open-cli": "^8.0.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "type-fest": "^2.19.0",
    "typescript": "~4.9.5",
    "zip-a-folder": "^3.1.6"
  },
  "prettier": "@sofie-automation/code-standard-preset/.prettierrc.json",
  "packageManager": "yarn@4.2.2",
  "dependencies": {
    "@yao-pkg/pkg": "^5.11.5"
  },
  "resolutions": {
    "node-hid": "npm:@julusian/hid@3.0.1-0"
  }
}
